<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_living_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tuomastiira.smarthouse.LivingRoomActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/livingroomSpinner"
        android:entries="@array/spinnerItems" />

    <TextView
        android:text="Temperature: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/livingroomSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView" />

    <TextView
        android:text="Humidity: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <TextView
        android:text="Alerts: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Increase"
        android:layout_height="wrap_content"
        android:id="@+id/roomTemperatureUpButton"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_width="80dp"
        android:layout_above="@+id/roomTemperatureDownButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/livingroomTemperatureSet"
        android:layout_toEndOf="@+id/livingroomTemperatureSet" />

    <Button
        android:text="Decrease"
        android:layout_height="wrap_content"
        android:id="@+id/roomTemperatureDownButton"
        style="@style/Base.Widget.AppCompat.Button.Small"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_width="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/livingroomTemperatureSet"
        android:layout_toEndOf="@+id/livingroomTemperatureSet" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/livingroomTemperatureSet"
        android:layout_alignBaseline="@+id/textView30"
        android:layout_alignBottom="@+id/textView30"
        android:layout_toRightOf="@+id/textView30"
        android:layout_toEndOf="@+id/textView30"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Set room temperature: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:layout_alignBottom="@+id/roomTemperatureDownButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_height="wrap_content"
        android:id="@+id/livingroomLightsButton"
        android:textOff="Turn room lights on"
        android:textOn="Turn room lights off"
        style="@android:style/Widget.Button.Toggle"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="20 Â°C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/livingroomSpinner"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/textView24"
        android:textStyle="normal|bold" />

    <TextView
        android:text="39 %"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:id="@+id/textView25"
        android:textStyle="normal|bold" />

    <TextView
        android:text="No alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/textView26"
        android:textStyle="normal|bold" />

</RelativeLayout>
