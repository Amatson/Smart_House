<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tiiraojala.smarthouse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="tiiraojala.smarthouse.HomeActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="tiiraojala.smarthouse.MainRoomActivity" android:screenOrientation="portrait"/>
        <activity android:name="tiiraojala.smarthouse.BedRoomActivity" android:screenOrientation="portrait"/>
        <activity android:name="tiiraojala.smarthouse.LivingRoomActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>